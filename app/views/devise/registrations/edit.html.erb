<div class="container form-container mb-3">
  <h2 class="pt-3">Editar Perfil</h2>
  <hr>
  <br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :avatar, "Foto de Perfil", class: "form-label" %>
      <%= f.file_field :avatar, accept: "image/*", class: "form-control-file" %>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= f.label :first_name, "Nombre", class: "form-label" %>
        <%= f.text_field :first_name, class: "form-control", autocomplete: "first_name" %>
      </div>
      
      <div class="form-group">
        <%= f.label :last_name, "Apellidos", class: "form-label" %>
        <%= f.text_field :last_name, class: "form-control", autocomplete: "last_name" %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= f.label :position, "Cargo", class: "form-label" %>
        <%= f.text_field :position, class: "form-control", autocomplete: "position" %>
      </div>

      <div class="form-group">
        <%= f.label :department, "Departamento", class: "form-label" %>
        <%= f.text_field :department, class: "form-control", autocomplete: "department" %>
      </div>
    </div>

    <div class="form-group">
        <%= f.label :bio, "Presentaci칩n", class: "form-label" %>
        <%= f.text_area :bio, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= f.label :password, "Contrase침a", class: "form-label" %>
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmar Contrase침a", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :current_password, "Contrase침a Actual (necesaria para confirmar cambios)", class: "form-label" %>
      <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
    </div>

    <div class="form-submit mb-4">
      <%= f.submit "Actualizar", class: "btn btn-primary" %>
      <%= link_to "Cancelar", :back, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>





