<h1>Welcome to the Admin Dashboard</h1>

<%= link_to "Create New User", new_admin_user_path %>

<%# List of users with option to delete %>
<% @users.each do |user| %>
    <p><%= user.first_name %> <%= user.last_name %> (<%= user.email %>)
        <%= link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user?" } %>
    </p>
<% end %>

